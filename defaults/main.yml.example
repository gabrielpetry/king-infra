---
# Gitlab Runner Config options
gitlab_runner_count: 1
gitlab_runner_prefix: "docker-runner"

# Set domain name
gitlab_url: "https://gitlab.exemplo.com.br"
gitlab_vhost: "gitlab.exemplo.com.br"
gitlab_with_ssl: true



nginx_sites_enabled: [
    {
        hostnames: ["site.exemplo.com.br"],
        port: "1234",
        username: "exemplo",
        error_pages: {"404": "/404.html", "500": "/500.html"},
        index: ["index.html", "index.php"],
        force_ssl: true,
    },
]

# Nginx conf
nginx_version: "nginx-1.15.11"
nginx_source_download: "http://nginx.org/download/{{ nginx_version }}.tar.gz"
nginx_install_dir: "/tmp/{{ nginx_version }}"

# Lets encrypt
letsencrypt_email: "contato@exemplo.com.br"

